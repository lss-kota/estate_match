<div class="min-h-screen bg-estate-warm-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <div class="text-center">
        <%= link_to root_path, class: "inline-block" do %>
          <h1 class="text-3xl font-bold text-estate-primary-600 mb-2">Estate Match</h1>
        <% end %>
        <h2 class="text-2xl font-bold text-estate-dark-800">ログイン</h2>
        <p class="mt-2 text-estate-dark-500">アカウントにサインインしてください</p>
      </div>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6") do |f| %>
        
        <!-- Email Field -->
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-estate-dark-700 mb-2" %>
          <%= f.email_field :email, 
                            autofocus: true, 
                            autocomplete: "email",
                            class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-estate-warm-400 placeholder-estate-dark-300 text-estate-dark-900 focus:outline-none focus:ring-estate-primary-500 focus:border-estate-primary-500 focus:z-10",
                            placeholder: "example@email.com" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-estate-dark-700 mb-2" %>
          <%= f.password_field :password, 
                               autocomplete: "current-password",
                               class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-estate-warm-400 placeholder-estate-dark-300 text-estate-dark-900 focus:outline-none focus:ring-estate-primary-500 focus:border-estate-primary-500 focus:z-10",
                               placeholder: "パスワードを入力" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-estate-primary-600 focus:ring-estate-primary-500 border-estate-warm-400 rounded" %>
            <%= f.label :remember_me, "ログイン状態を記憶する", class: "ml-2 block text-sm text-estate-dark-700" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="pt-8">
          <button type="submit" class="w-full bg-estate-primary-600 hover:bg-estate-primary-700 text-white font-bold py-4 px-6 rounded-lg text-lg transition duration-300 shadow-md">
            ログイン
          </button>
        </div>
      <% end %>

      <!-- Links -->
      <div class="text-center pt-4 space-y-2">
        <p class="text-estate-dark-500 text-sm">
          <%= link_to "パスワードを忘れた方", new_user_password_path, class: "text-estate-primary-600 hover:text-estate-primary-500 font-medium" %>
        </p>
        <p class="text-estate-dark-500 text-sm">
          アカウントをお持ちでない方は
          <%= link_to "新規登録", new_user_registration_path, class: "text-estate-primary-600 hover:text-estate-primary-500 font-medium" %>
        </p>
      </div>
    </div>
  </div>
</div>
