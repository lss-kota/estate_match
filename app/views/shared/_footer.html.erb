  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Estate Match について -->
      <div class="col-span-1">
        <div class="flex items-center mb-4">
          <%= link_to root_path, class: "flex items-center" do %>
            <div class="bg-estate-primary-600 text-white font-bold text-xl px-3 py-2 rounded-lg">
              EM
            </div>
            <span class="ml-3 text-xl font-bold text-white">Estate Match</span>
          <% end %>
        </div>
        <p class="text-estate-dark-300 mb-4 max-w-md">
          空き家・空き地をマッチングするプラットフォーム。地域の活性化と不動産の有効活用で、持続可能な社会の実現を目指します。
        </p>
        <div class="flex space-x-4">
          <!-- SNSリンク（将来実装） -->
          <a href="#" class="text-estate-dark-300 hover:text-white transition-colors duration-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          <a href="#" class="text-estate-dark-300 hover:text-white transition-colors duration-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- サービス -->
      <div>
        <h3 class="text-lg font-semibold mb-4">サービス</h3>
        <ul class="space-y-2">
          <li><%= link_to "物件を探す", properties_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
          <% if user_signed_in? %>
            <li><%= link_to "マイページ", dashboard_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
            <% if current_user.owner? %>
              <li><%= link_to "物件を投稿", new_step1_properties_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
              <li><%= link_to "投稿した物件", my_properties_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
            <% else %>
              <li><%= link_to "お気に入り", favorites_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
            <% end %>
            <li><%= link_to "メッセージ", conversations_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
          <% else %>
            <li><%= link_to "新規登録", new_user_registration_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
          <% end %>
        </ul>
      </div>

      <!-- サポート -->
      <div>
        <h3 class="text-lg font-semibold mb-4">サポート</h3>
        <ul class="space-y-2">
          <li><a href="#" class="text-estate-dark-300 hover:text-white transition-colors duration-200">よくある質問</a></li>
          <li><a href="#" class="text-estate-dark-300 hover:text-white transition-colors duration-200">お問い合わせ</a></li>
          <li><%= link_to "運営会社情報", company_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200" %></li>
        </ul>
      </div>

    </div>

    <!-- 法的情報とコピーライト -->
    <div class="border-t border-estate-dark-700 mt-8 pt-8">
      <!-- 法的ページリンク -->
      <div class="flex flex-wrap justify-center gap-6 mb-4">
        <%= link_to "利用規約", terms_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200 text-sm" %>
        <%= link_to "プライバシーポリシー", privacy_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200 text-sm" %>
        <%= link_to "特定商取引法に基づく表示", tokutei_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200 text-sm" %>
        <%= link_to "運営会社情報", company_path, class: "text-estate-dark-300 hover:text-white transition-colors duration-200 text-sm" %>
      </div>
      
      <!-- コピーライト -->
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-estate-dark-300 text-sm">
          © 2025 EstateMatch. All rights reserved.
        </p>
        <p class="text-estate-dark-300 text-xs mt-2 md:mt-0">
          空き家・空き地マッチングプラットフォーム
        </p>
      </div>
    </div>
  </div>
</footer>