<nav class="bg-white shadow-sm border-b border-estate-warm-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- ロゴ・ブランド -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <h1 class="text-2xl font-bold text-estate-primary-600">Estate Match</h1>
        <% end %>
      </div>

      <!-- ナビゲーションメニュー -->
      <div class="flex items-center space-x-6">
        <% if user_signed_in? %>
          <!-- ログイン済みの場合 -->
          <div class="flex items-center space-x-4">
            <!-- 物件一覧へのリンク -->
            <%= link_to "物件を探す", properties_path, 
                  class: "text-estate-dark-600 hover:text-estate-primary-600 font-medium transition-colors duration-200" %>
            
            <!-- お気に入りへのリンク（購買者のみ） -->
            <% if current_user.buyer? %>
              <%= link_to "お気に入り", favorites_path, 
                    class: "text-estate-dark-600 hover:text-estate-success-600 font-medium transition-colors duration-200" %>
            <% end %>
            
            <!-- マイページへのリンク -->
            <%= link_to "マイページ", dashboard_path, 
                  class: "bg-estate-primary-100 text-estate-primary-700 hover:bg-estate-primary-200 font-medium px-4 py-2 rounded-md transition-colors duration-200" %>
            
            <!-- オーナー向け：マイ物件 -->
            <% if current_user.owner? %>
              <%= link_to "物件管理", my_properties_path, 
                    class: "text-estate-dark-600 hover:text-estate-primary-600 font-medium transition-colors duration-200" %>
            <% end %>
            
            <!-- ユーザー情報 -->
            <div class="flex items-center space-x-3">
              <span class="text-estate-dark-500">こんにちは、<%= current_user.name %>さん</span>
              <%= button_to "ログアウト", destroy_user_session_path, 
                            method: :delete,
                            form: { "data-turbo-confirm": "ログアウトしますか？" },
                            class: "bg-estate-primary-600 hover:bg-estate-primary-700 text-white font-medium px-4 py-2 rounded-md transition-colors duration-200" %>
            </div>
          </div>
        <% else %>
          <!-- ログインしていない場合 -->
          <div class="flex items-center space-x-4">
            <%= link_to "物件を探す", properties_path, 
                  class: "text-estate-dark-600 hover:text-estate-primary-600 font-medium transition-colors duration-200" %>
            <%= link_to "ログイン", new_user_session_path, 
                  class: "bg-estate-primary-600 hover:bg-estate-primary-700 text-white font-medium px-4 py-2 rounded-md transition-colors duration-200" %>
            <%= link_to "会員登録", new_user_registration_path, 
                  class: "border border-estate-primary-600 text-estate-primary-600 hover:bg-estate-primary-600 hover:text-white font-medium px-4 py-2 rounded-md transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>