<!-- 物件管理 - 一覧 -->
<div class="space-y-6">
  <!-- ページヘッダー -->
  <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-white">物件管理</h1>
        <p class="text-gray-300 mt-1">投稿物件の確認・管理を行います</p>
      </div>
      <div class="text-sm text-gray-400">
        総物件数: <%= number_with_delimiter(@stats[:total_count]) %>件
      </div>
    </div>
  </div>

  <!-- 統計サマリー -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-400">募集中</p>
          <p class="text-lg font-semibold text-white"><%= number_with_delimiter(@stats[:active_count]) %>件</p>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-400">成約済み</p>
          <p class="text-lg font-semibold text-white"><%= number_with_delimiter(@stats[:completed_count]) %>件</p>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-400">一時停止</p>
          <p class="text-lg font-semibold text-white"><%= number_with_delimiter(@stats[:paused_count]) %>件</p>
        </div>
      </div>
    </div>

    <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5">
          <p class="text-sm font-medium text-gray-400">今日の新規投稿</p>
          <p class="text-lg font-semibold text-white"><%= number_with_delimiter(@stats[:today_posts]) %>件</p>
        </div>
      </div>
    </div>
  </div>

  <!-- 物件タイプ統計 -->
  <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
    <h3 class="text-lg font-medium text-white mb-4">物件タイプ別統計</h3>
    <div class="grid grid-cols-3 gap-6">
      <div class="text-center p-4 bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-green-600"><%= @stats[:house_count] %></div>
        <div class="text-sm text-gray-300">戸建て</div>
      </div>
      <div class="text-center p-4 bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-blue-600"><%= @stats[:land_count] %></div>
        <div class="text-sm text-gray-300">土地</div>
      </div>
      <div class="text-center p-4 bg-gray-700 rounded-lg">
        <div class="text-2xl font-bold text-purple-600"><%= @stats[:apartment_count] %></div>
        <div class="text-sm text-gray-300">マンション</div>
      </div>
    </div>
  </div>

  <!-- 検索・フィルター -->
  <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 p-6">
    <%= form_with url: admin_properties_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div>
          <%= form.label :search, "物件検索", class: "block text-sm font-medium text-gray-200 mb-1" %>
          <%= form.text_field :search, 
                value: params[:search],
                placeholder: "タイトル、説明、所在地で検索",
                class: "w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white placeholder-gray-400 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500" %>
        </div>
        
        <div>
          <%= form.label :status, "ステータス", class: "block text-sm font-medium text-gray-200 mb-1" %>
          <%= form.select :status, 
                options_for_select([
                  ['すべて', 'all'],
                  ['募集中', 'active'],
                  ['成約済み', 'completed'],
                  ['一時停止', 'paused']
                ], params[:status] || 'all'),
                {},
                class: "w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white placeholder-gray-400 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500" %>
        </div>
        
        <div>
          <%= form.label :property_type, "物件タイプ", class: "block text-sm font-medium text-gray-200 mb-1" %>
          <%= form.select :property_type, 
                options_for_select([
                  ['すべて', 'all'],
                  ['戸建て', 'house'],
                  ['土地', 'land'],
                  ['マンション', 'apartment']
                ], params[:property_type] || 'all'),
                {},
                class: "w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white placeholder-gray-400 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500" %>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div>
          <%= form.label :price_min, "最低価格", class: "block text-sm font-medium text-gray-200 mb-1" %>
          <%= form.number_field :price_min, 
                value: params[:price_min],
                placeholder: "例: 1000000",
                class: "w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white placeholder-gray-400 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500" %>
        </div>
        
        <div>
          <%= form.label :price_max, "最高価格", class: "block text-sm font-medium text-gray-200 mb-1" %>
          <%= form.number_field :price_max, 
                value: params[:price_max],
                placeholder: "例: 50000000",
                class: "w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white placeholder-gray-400 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500" %>
        </div>
        
        <div class="flex items-end space-x-2">
          <%= form.submit "検索", 
                class: "flex-1 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500" %>
          <%= link_to "リセット", admin_properties_path,
                class: "flex-1 px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-500 text-center" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 物件一覧テーブル -->
  <div class="bg-gray-800 shadow-lg rounded-lg border border-gray-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-600">
      <h3 class="text-lg font-medium text-white">物件一覧</h3>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-600">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">物件情報</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">オーナー</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">価格</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ステータス</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">アクティビティ</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-gray-800 divide-y divide-gray-600">
          <% @properties.each do |property| %>
            <tr class="hover:bg-gray-700">
              <td class="px-6 py-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0 h-16 w-16">
                    <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center">
                      <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-white">
                      <%= link_to truncate(property.title, length: 40), property_path(property), 
                            class: "hover:text-blue-600", target: "_blank" %>
                    </div>
                    <div class="text-sm text-gray-400">
                      <%= truncate(property.description, length: 60) %>
                    </div>
                    <div class="text-xs text-gray-400 mt-1">
                      <%= property.location %> • 
                      <%= case property.property_type
                          when 'house' then '戸建て'
                          when 'land' then '土地'
                          when 'apartment' then 'マンション'
                          else property.property_type
                          end %>
                    </div>
                    <div class="text-xs text-gray-400">
                      <%= property.created_at.strftime('%Y年%m月%d日') %>投稿
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-white"><%= property.user.name %></div>
                <div class="text-sm text-gray-400"><%= property.user.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-white">
                  ¥<%= number_with_delimiter(property.price) %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case property.status
                      when 'active' then 'bg-green-100 text-green-800'
                      when 'completed' then 'bg-blue-100 text-blue-800'
                      when 'paused' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-gray-100 text-gray-100'
                      end %>">
                  <%= case property.status
                      when 'active' then '募集中'
                      when 'completed' then '成約済み'
                      when 'paused' then '一時停止'
                      else property.status
                      end %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                <div>お気に入り: <%= property.favorites.count %>件</div>
                <div>会話: <%= property.conversations.count %>件</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end space-x-2">
                  <%= link_to "詳細", admin_property_path(property),
                        class: "text-red-600 hover:text-red-900" %>
                  <%= link_to "編集", edit_admin_property_path(property),
                        class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "削除", admin_property_path(property),
                        method: :delete,
                        data: { 
                          confirm: "物件「#{property.title}」を削除しますか？この操作は取り消せません。"
                        },
                        class: "text-red-600 hover:text-red-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- ページネーション -->
    <% if @properties.respond_to?(:current_page) %>
      <div class="px-6 py-4 border-t border-gray-600">
        <%= paginate @properties %>
      </div>
    <% end %>
  </div>
</div>