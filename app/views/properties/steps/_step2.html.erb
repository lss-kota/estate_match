<%= turbo_frame_tag "property_modal_content" do %>
  <div class="p-8">
    <!-- Step Title -->
    <div class="text-center mb-8">
      <h3 class="text-2xl font-bold text-estate-dark-800 mb-2">物件の基本情報を教えてください</h3>
      <p class="text-estate-dark-500">物件名と簡単な説明をご入力ください</p>
    </div>

    <!-- Basic Info Form -->
    <%= form_with url: save_step2_properties_path, method: :post, local: true, 
                  data: { turbo: true }, class: "space-y-6" do |form| %>
      
      <div class="space-y-6">
        <!-- Property Title -->
        <div>
          <%= form.label :title, "物件名", class: "block text-lg font-medium text-estate-dark-700 mb-3" %>
          <%= form.text_field :title, 
                              value: step_data&.dig('title'),
                              placeholder: "例：築浅！駅近の戸建て住宅",
                              class: "w-full px-4 py-3 text-lg border-2 border-estate-warm-300 rounded-lg focus:outline-none focus:border-estate-primary-500 focus:ring-2 focus:ring-estate-primary-200 transition-all duration-200",
                              required: true %>
          <p class="mt-2 text-sm text-estate-dark-500">魅力的な物件名をつけると、より多くの人に見てもらえます</p>
        </div>

        <!-- Property Type -->
        <div>
          <%= form.label :property_type, "物件の種類", class: "block text-lg font-medium text-estate-dark-700 mb-3" %>
          <div class="grid grid-cols-2 gap-4">
            <% [
                 { value: 'house', label: '🏠 戸建て', description: '一戸建て住宅' },
                 { value: 'mansion', label: '🏢 マンション', description: '分譲マンション' },
                 { value: 'apartment', label: '🏘️ アパート', description: 'アパート・賃貸物件' },
                 { value: 'land', label: '🌳 土地', description: '更地・宅地' }
               ].each do |option| %>
              <div class="relative">
                <%= form.radio_button :property_type, option[:value], 
                                      id: "property_type_#{option[:value]}", 
                                      class: "sr-only peer",
                                      checked: step_data&.dig('property_type') == option[:value] %>
                <%= form.label :property_type, value: option[:value], 
                               class: "block p-4 bg-white border-2 border-estate-warm-300 rounded-lg cursor-pointer hover:border-estate-primary-400 peer-checked:border-estate-primary-600 peer-checked:bg-estate-primary-50 transition-all duration-200 text-center",
                               for: "property_type_#{option[:value]}" do %>
                  <div class="text-lg font-semibold text-estate-dark-800 mb-1">
                    <%= option[:label] %>
                  </div>
                  <p class="text-sm text-estate-dark-500"><%= option[:description] %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Description -->
        <div>
          <%= form.label :description, "物件の特徴・アピールポイント", class: "block text-lg font-medium text-estate-dark-700 mb-3" %>
          <%= form.text_area :description, 
                             value: step_data&.dig('description'),
                             placeholder: "例：駅から徒歩5分の好立地！リフォーム済みできれいです。近くにスーパーやコンビニもあり生活に便利です。",
                             rows: 4,
                             class: "w-full px-4 py-3 text-lg border-2 border-estate-warm-300 rounded-lg focus:outline-none focus:border-estate-primary-500 focus:ring-2 focus:ring-estate-primary-200 transition-all duration-200 resize-none",
                             required: true %>
          <p class="mt-2 text-sm text-estate-dark-500">物件の魅力を分かりやすく教えてください</p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-between pt-6">
        <button type="button" 
                onclick="goBackToStep1()"
                class="bg-estate-warm-300 hover:bg-estate-warm-400 text-estate-dark-700 font-medium px-8 py-3 rounded-lg transition duration-200">
          戻る
        </button>
        
        <%= form.submit "次へ進む", 
                        class: "bg-estate-primary-600 hover:bg-estate-primary-700 text-white font-bold px-8 py-3 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <script>
    // Update progress bar to step 2 immediately
    (function() {
      const progressBar = document.querySelector('[data-property-modal-target="progressBar"]');
      const stepIndicator = document.querySelector('[data-property-modal-target="stepIndicator"]');
      
      if (progressBar) {
        progressBar.style.width = '40%';
        console.log('Updated progress to 40% (Step 2)');
      }
      if (stepIndicator) {
        stepIndicator.textContent = '2 / 5';
      }
    })();

    // Back navigation function
    function goBackToStep1() {
      console.log('Going back to step 1');
      
      fetch('<%= new_step1_properties_path %>', {
        method: 'GET',
        headers: {
          'Accept': 'text/vnd.turbo-stream.html',
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.text())
      .then(html => {
        const frame = document.querySelector('turbo-frame[id="property_modal_content"]');
        if (frame) {
          frame.innerHTML = html;
          console.log('Successfully navigated to step 1');
          
          // Update progress bar after navigation
          setTimeout(() => {
            const progressBar = document.querySelector('[data-property-modal-target="progressBar"]');
            const stepIndicator = document.querySelector('[data-property-modal-target="stepIndicator"]');
            
            if (progressBar) {
              progressBar.style.width = '20%';
              console.log('Updated progress to 20% (Back to Step 1)');
            }
            if (stepIndicator) {
              stepIndicator.textContent = '1 / 5';
            }
          }, 100);
        }
      })
      .catch(error => {
        console.error('Error navigating to step 1:', error);
      });
    }
  </script>
<% end %>