<%= turbo_frame_tag "property_modal_content" do %>
  <div class="p-8">
    <!-- Step Title -->
    <div class="text-center mb-8">
      <h3 class="text-2xl font-bold text-estate-dark-800 mb-2">価格を設定してください</h3>
      <p class="text-estate-dark-500">
        <% case step_data&.dig('transaction_type') %>
        <% when 'sale_only' %>
          売買価格を入力してください
        <% when 'rent_only' %>
          月額賃料を入力してください
        <% when 'both' %>
          売買価格と月額賃料を入力してください
        <% end %>
      </p>
    </div>

    <!-- Price Form -->
    <%= form_with url: save_step4_properties_path, method: :post, local: true, 
                  data: { turbo: true }, class: "space-y-6" do |form| %>
      
      <div class="space-y-6">
        
        <% if ['sale_only', 'both'].include?(step_data&.dig('transaction_type')) %>
          <!-- Sale Price -->
          <div class="bg-estate-primary-50 border-2 border-estate-primary-200 rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-estate-primary-600 rounded-full flex items-center justify-center mr-3">
                <span class="text-white font-bold text-sm">💰</span>
              </div>
              <%= form.label :sale_price, "売買価格", class: "text-lg font-semibold text-estate-primary-700" %>
            </div>
            
            <div class="relative">
              <%= form.number_field :sale_price, 
                                    value: step_data&.dig('sale_price'),
                                    placeholder: "例：3500",
                                    min: 1,
                                    step: 1,
                                    class: "w-full px-4 py-4 pr-16 text-2xl font-bold text-estate-primary-700 border-2 border-estate-primary-300 rounded-lg focus:outline-none focus:border-estate-primary-500 focus:ring-2 focus:ring-estate-primary-200 transition-all duration-200",
                                    required: step_data&.dig('transaction_type') == 'sale_only' %>
              <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                <span class="text-xl font-bold text-estate-primary-600">万円</span>
              </div>
            </div>
            <p class="mt-2 text-sm text-estate-primary-600">希望する売買価格を万円単位で入力してください</p>
          </div>
        <% end %>

        <% if ['rent_only', 'both'].include?(step_data&.dig('transaction_type')) %>
          <!-- Rental Price -->
          <div class="bg-estate-success-50 border-2 border-estate-success-200 rounded-xl p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-estate-success-600 rounded-full flex items-center justify-center mr-3">
                <span class="text-white font-bold text-sm">🏠</span>
              </div>
              <%= form.label :rental_price, "月額賃料", class: "text-lg font-semibold text-estate-success-700" %>
            </div>
            
            <div class="relative">
              <%= form.number_field :rental_price, 
                                    value: step_data&.dig('rental_price'),
                                    placeholder: "例：120000",
                                    min: 1000,
                                    step: 1000,
                                    class: "w-full px-4 py-4 pr-16 text-2xl font-bold text-estate-success-700 border-2 border-estate-success-300 rounded-lg focus:outline-none focus:border-estate-success-500 focus:ring-2 focus:ring-estate-success-200 transition-all duration-200",
                                    required: step_data&.dig('transaction_type') == 'rent_only' %>
              <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                <span class="text-xl font-bold text-estate-success-600">円/月</span>
              </div>
            </div>
            <p class="mt-2 text-sm text-estate-success-600">希望する月額賃料を円単位で入力してください</p>
          </div>
        <% end %>

        <!-- Price Guide -->
        <div class="bg-estate-warm-100 rounded-lg p-4">
          <h4 class="text-lg font-semibold text-estate-dark-700 mb-2">💡 価格設定のコツ</h4>
          <ul class="text-sm text-estate-dark-600 space-y-1">
            <li>• 近隣の似た物件の相場を参考にしましょう</li>
            <li>• 後からマイページで詳細に調整できます</li>
            <li>• まずは希望価格からスタートしてOKです</li>
          </ul>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-between pt-6">
        <button type="button" 
                onclick="goBackToStep3()"
                class="bg-estate-warm-300 hover:bg-estate-warm-400 text-estate-dark-700 font-medium px-8 py-3 rounded-lg transition duration-200">
          戻る
        </button>
        
        <%= form.submit "次へ進む", 
                        class: "bg-estate-primary-600 hover:bg-estate-primary-700 text-white font-bold px-8 py-3 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <script>
    // Update progress bar to step 4 immediately
    (function() {
      const progressBar = document.querySelector('[data-property-modal-target="progressBar"]');
      const stepIndicator = document.querySelector('[data-property-modal-target="stepIndicator"]');
      
      if (progressBar) {
        progressBar.style.width = '80%';
        console.log('Updated progress to 80% (Step 4)');
      }
      if (stepIndicator) {
        stepIndicator.textContent = '4 / 5';
      }
    })();

    // Back navigation function
    function goBackToStep3() {
      console.log('Going back to step 3');
      
      fetch('<%= new_step3_properties_path %>', {
        method: 'GET',
        headers: {
          'Accept': 'text/vnd.turbo-stream.html',
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.text())
      .then(html => {
        const frame = document.querySelector('turbo-frame[id="property_modal_content"]');
        if (frame) {
          frame.innerHTML = html;
          console.log('Successfully navigated to step 3');
          
          // Update progress bar after navigation
          setTimeout(() => {
            const progressBar = document.querySelector('[data-property-modal-target="progressBar"]');
            const stepIndicator = document.querySelector('[data-property-modal-target="stepIndicator"]');
            
            if (progressBar) {
              progressBar.style.width = '60%';
              console.log('Updated progress to 60% (Back to Step 3)');
            }
            if (stepIndicator) {
              stepIndicator.textContent = '3 / 5';
            }
          }, 100);
        }
      })
      .catch(error => {
        console.error('Error navigating to step 3:', error);
      });
    }
  </script>
<% end %>