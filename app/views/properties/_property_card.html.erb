<!-- 物件カード -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-200">
  <%= link_to property_path(property), class: "block" do %>
    
    <!-- 画像部分 -->
    <div class="relative h-40 bg-gray-100 overflow-hidden">
      <% if property.images.attached? %>
        <img src="<%= property.images.first.url %>"
             alt="<%= property.title %>"
             class="w-full h-full object-cover">
      <% else %>
        <!-- デフォルト画像 -->
        <div class="w-full h-full bg-gradient-to-br from-estate-primary-100 to-estate-primary-200 flex items-center justify-center">
          <svg class="h-16 w-16 text-estate-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 21l4-4 4 4" />
          </svg>
        </div>
      <% end %>
      
      <!-- ステータスバッジ -->
      <div class="absolute top-3 left-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= Property.human_attribute_name("status.#{property.status}") %>
        </span>
      </div>
      
      <!-- 物件種別バッジ -->
      <div class="absolute top-3 right-3">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= Property.human_attribute_name("property_type.#{property.property_type}") %>
        </span>
      </div>
      
      <!-- お気に入りボタン（購入希望者のみ） -->
      <% if user_signed_in? && current_user.buyer? %>
        <div class="absolute bottom-3 right-3">
          <button type="button" 
                  class="favorite-btn <%= 'favorited' if property.favorited_by?(current_user) %>"
                  data-controller="favorite"
                  data-favorite-property-id-value="<%= property.id %>"
                  data-favorite-favorited-value="<%= property.favorited_by?(current_user) %>"
                  data-action="click->favorite#toggle">
            <svg class="w-6 h-6" fill="<%= property.favorited_by?(current_user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- 物件情報 -->
    <div class="p-4">
      <!-- タイトル -->
      <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
        <%= property.title %>
      </h3>
      
      <!-- 住所 -->
      <p class="text-sm text-gray-600 mb-3 flex items-center">
        <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <%= [property.prefecture, property.city].compact.join(' ') %>
      </p>

      <!-- 価格表示 -->
      <div class="mb-3">
        <% if property.sale_price.present? && property.rental_price.present? %>
          <!-- 売買・賃貸両方 -->
          <div class="space-y-1">
            <p class="text-lg font-bold text-estate-primary-600">
              売却価格: <%= number_to_currency(property.sale_price, unit: "", precision: 0, delimiter: ",") %>万円
            </p>
            <p class="text-md font-semibold text-estate-secondary-600">
              賃料: <%= number_to_currency(property.rental_price, unit: "", precision: 0, delimiter: ",") %>円/月
            </p>
          </div>
        <% elsif property.sale_price.present? %>
          <!-- 売買のみ -->
          <p class="text-xl font-bold text-estate-primary-600">
            <%= number_to_currency(property.sale_price, unit: "", precision: 0, delimiter: ",") %>万円
          </p>
        <% elsif property.rental_price.present? %>
          <!-- 賃貸のみ -->
          <p class="text-xl font-bold text-estate-secondary-600">
            <%= number_to_currency(property.rental_price, unit: "", precision: 0, delimiter: ",") %>円/月
          </p>
        <% else %>
          <p class="text-md text-gray-600">価格相談</p>
        <% end %>
      </div>

      <!-- 物件詳細情報 -->
      <div class="grid grid-cols-2 gap-2 text-xs text-gray-600 mb-3">
        <% if property.building_area.present? %>
          <div class="flex items-center">
            <span class="text-gray-400">建物:</span>
            <span class="ml-1"><%= property.building_area %>㎡</span>
          </div>
        <% end %>
        <% if property.land_area.present? %>
          <div class="flex items-center">
            <span class="text-gray-400">土地:</span>
            <span class="ml-1"><%= property.land_area %>㎡</span>
          </div>
        <% end %>
        <% if property.rooms.present? %>
          <div class="flex items-center">
            <span class="text-gray-400">間取り:</span>
            <span class="ml-1"><%= property.rooms %></span>
          </div>
        <% end %>
        <% if property.construction_year.present? %>
          <div class="flex items-center">
            <span class="text-gray-400">築年:</span>
            <span class="ml-1"><%= property.construction_year %>年</span>
          </div>
        <% end %>
      </div>

      <!-- タグ表示 -->
      <% if property.tags.any? %>
        <div class="flex flex-wrap gap-1 mb-3">
          <% property.tags.limit(3).each do |tag| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-700">
              <%= tag.name %>
            </span>
          <% end %>
          <% if property.tags.count > 3 %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-500">
              +<%= property.tags.count - 3 %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- オーナー情報と更新日時 -->
      <div class="flex justify-between items-center text-xs text-gray-500 pt-3 border-t border-gray-100">
        <div class="flex items-center">
          <svg class="h-3 w-3 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span><%= property.user.email.split('@').first %></span>
        </div>
        <div>
          <%= time_ago_in_words(property.updated_at) %>前更新
        </div>
      </div>
    </div>

  <% end %>
</div>