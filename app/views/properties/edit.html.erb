            <%= form.label :property_type, "уЅЕС╗Хуе«тѕЦ", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :property_type,
                  options_for_select([
                    ["ТѕИт╗║сЂд", "house"],
                    ["сЃъсЃ│сѓисЃДсЃ│", "mansion"],
                    ["тюЪтю░", "land"],
                    ["сѓбсЃЉсЃ╝сЃѕ", "apartment"]
                  ], @property.property_type),
                  { prompt: "жЂИТіъсЂЌсЂдсЂЈсЂасЂЋсЂё" },
                  { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-estate-primary-500" } %>
          </div>

          <!-- УфгТўјТќЄ -->
          <div>
            <%= form.label :description, "уЅЕС╗ХУфгТўј", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                  rows: 6,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-estate-primary-500 focus:border-transparent",
                  placeholder: "уЅЕС╗ХсЂ«жГЁтіЏсѓёуЅ╣тЙ┤сѓњУЕ│сЂЌсЂЈУеўУ╝ЅсЂЌсЂдсЂЈсЂасЂЋсЂё..." %>
          </div>
        </div>
      </div>

      <!-- ТЅђтюетю░ТЃЁта▒сѓ╗сѓ»сѓисЃДсЃ│ -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">ТЅђтюетю░ТЃЁта▒</h3>
        </div>
        <div class="p-6 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- жЃйжЂЊт║юуюї -->
            <div>
              <%= form.label :prefecture, "жЃйжЂЊт║юуюї", class: "block text-sm font-medium text-gray-700 mb-2" %>
