<!-- Estate Match お気に入り一覧 -->
<div class="min-h-screen bg-gray-50">
  <!-- ヘッダー -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <%= link_to dashboard_path, class: "text-gray-500 hover:text-gray-700" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">お気に入り物件</h1>
            <p class="text-gray-600 mt-1">気になる物件をチェックして、後で比較検討してみましょう</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "物件を探す", properties_path, 
                class: "bg-estate-primary-600 text-white px-4 py-2 rounded-md hover:bg-estate-primary-700 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @favorite_properties.any? %>
      <!-- お気に入り物件数 -->
      <div class="mb-6">
        <p class="text-lg text-gray-700">
          <span class="font-semibold text-estate-success-600"><%= @favorite_properties.count %></span>件のお気に入り物件があります
        </p>
      </div>

      <!-- 物件カード一覧 -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @favorite_properties.each do |property| %>
          <%= render 'properties/property_card', property: property %>
        <% end %>
      </div>

      <!-- 関連リンク -->
      <div class="mt-12 text-center">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">他にも気になる物件をお探しですか？</h3>
          <div class="space-y-4 sm:space-y-0 sm:flex sm:justify-center sm:space-x-4">
            <%= link_to "すべての物件を見る", properties_path, 
                  class: "inline-block bg-estate-primary-600 text-white px-6 py-3 rounded-md font-medium hover:bg-estate-primary-700 transition-colors duration-200" %>
            <%= link_to "マイページに戻る", dashboard_path, 
                  class: "inline-block border border-estate-primary-600 text-estate-primary-600 hover:bg-estate-primary-600 hover:text-white px-6 py-3 rounded-md font-medium transition-colors duration-200" %>
          </div>
        </div>
      </div>
    <% else %>
      <!-- 空の状態 -->
      <div class="text-center py-16">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 max-w-md mx-auto">
          <!-- ハートアイコン -->
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-gray-100 mb-6">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            まだお気に入り物件がありません
          </h3>
          <p class="text-gray-600 mb-6">
            気になる物件を見つけたら、ハートマークをクリックしてお気に入りに追加してみましょう。
          </p>
          
          <div class="space-y-3">
            <%= link_to "物件を探す", properties_path, 
                  class: "w-full bg-estate-primary-600 text-white px-6 py-3 rounded-md font-medium hover:bg-estate-primary-700 transition-colors duration-200 inline-block" %>
            <%= link_to "マイページに戻る", dashboard_path, 
                  class: "w-full border border-gray-300 text-gray-700 hover:bg-gray-50 px-6 py-3 rounded-md font-medium transition-colors duration-200 inline-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>